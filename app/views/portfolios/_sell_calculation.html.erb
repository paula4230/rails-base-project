<%= form_with(url: calculate_sell_price_path, method: 'get', local: true) do |form| %>
    <div>
    <%= label_tag :company, 'Stock Name'%>
    </div>

    <div>
    <%= text_field_tag :company, nil, class: 'form-control' %>
    </div>

    <br>
    <div>
    <%= label_tag :count_shares, 'Number of Shares to Sell'%>
    </div>

    
    <div>
    <%= form.number_field :count_shares, value: @count_shares.to_i , class: 'form-control' %>
    </div>
    <br>
    <div>
    <%= button_tag 'Get Total Price', class: 'button-succes' %>
    </div>
<% end %>