<%= render '/portfolios/shared'%>

<div class= 'portfolios'>
  <% @stock_symbol%>
  <% @shares_sum.values%>
  <% @shares_ave.values%>

  
  <div class= "portfolio_table">
    
    <table class ="portfolio_table_contents">
      <tbody class ="portfolio_table_contents_body">
        <tr class ="portfolio_table_headers">
          <td class = "pth">
            Symbol
          </td>

          <td class = "pth">
            Company Name
          </td>
            
          <td class = "pth">
            Shares
          </td>

          <td class = "pth">
            Price at Purchase
          </td>
        </tr>

        <tr class ="portfolio_details">
          <td class = "ptd">
            <% @stock_symbol.each do |sym| %>
              <p class = "ptd_each" > <%= sym %> </p>
            <% end %>
          </td>

          <td class = "ptd">
            <% @stock_name.each do |name| %>
              <p class = "ptd_each"> <%= name %> </p>
            <% end %>
          </td>

          <td class = "ptd">
          <% @sum.each do |sum| %>
            <p class = "ptd_each"> <%= sum %></p>
          <% end %>
          </td>

          <td class = "ptd">
            <% @ave.each do |ave| %>
              <p class = "ptd_each"> <%= ave %></p>
              
            <% end %>
          </td>

        </tr>
      </tbody>
    </table>
  </div>

  <div class= 'stock-home-form'>
  <div class= 'portfolio-forms'>
    <div class= 'portfolio-forms-content'>
      <div>
      <%= 'Sell Stock' %>
      </div>

      <br>

      <div>
      <%= render '/portfolios/sell_calculation', @transaction%>
      </div>

      <div>
      Current Market Price: <%= @current_market_price%>
      </div>


      <% @count_shares%>

      <div>
      Total Price: <%= @result %>
      </div>

      <% @price_at_purchase%>
      <% @profit %>
      <br>
      <div class="stock-home-form">
      <%= render '/portfolios/sell_form', @transaction%>
      </div>
    </div>
  </div>
  </div>

</div>
